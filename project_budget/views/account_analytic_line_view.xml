<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="view_account_analytic_line_tree_inh_project_budget">
            <field name="name">view.account.analytic.line.tree.inh.project.budget</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <field name="account_id" position="after">
                    <field name="invoice_id" />
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_account_analytic_line_form_inh_project_budget">
            <field name="name">view.account.analytic.line.form.inh.project.budget</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <field name="account_id" position="after">
                    <field name="invoice_id" readonly="1"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_account_analytic_line_filter_inh_project_budget">
            <field name="name">view.account.analytic.line.filter.inh.project.budget</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_filter"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <field name="account_id" position="after">
                    <field name="invoice_id" />
                </field>
                <filter name="account_id" position="after">
                    <filter string="Invoice" context="{'group_by':'invoice_id'}" name="invoice_id"/>
                </filter>
            </field>
        </record>
</odoo>
