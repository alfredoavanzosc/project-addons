<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <menuitem parent="account.menu_finance_entries_management"
            id="menu_act2_crossovered_budget_lines_view"
            name="Budgets lines"
            action="account_budget.act_crossovered_budget_lines_view"
            sequence="65" />
        <record model="ir.ui.view" id="view_crossovered_budget_line_form_inh_project_budget">
            <field name="name">view.crossovered.budget.line.form.inh.project.budget</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_form"/>
            <field name="arch" type="xml">
                <field name="percentage" position="before">
                    <field name="initial_planned_amount" readonly="1"/>
                </field>
                <xpath expr="//field[@name='company_id']/.." position="after">
                    <group col="4">
                        <separator string="Notes" colspan="4"/>
                        <field name="notes" nolabel="1" colspan="4" />
                    </group>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_crossovered_budget_line_tree_inh_project_budget">
            <field name="name">view.crossovered.budget.line.tree.inh.project.budget</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_tree"/>
            <field name="arch" type="xml">
                <field name="percentage" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="paid_date" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="planned_amount" position="after">
                    <field name="initial_planned_amount" widget="monetary" sum="Initial planned amount"/>
                </field>
                <field name="planned_amount" position="attributes">
                    <attribute name="sum">Planned Amount</attribute>
                </field>
                <field name="practical_amount" position="attributes">
                    <attribute name="sum">Practical Amount</attribute>
                </field>
                <field name="theoritical_amount" position="attributes">
                    <attribute name="sum">Theoritical Amount</attribute>
                </field>
                <field name="crossovered_budget_id" position="attributes">
                    <attribute name="invisible">0</attribute>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_crossovered_budget_line_search_inh_project_budget">
            <field name="name">view.crossovered.budget.line.search.inh.project.budget</field>
            <field name="model">crossovered.budget.lines</field>
            <field name="inherit_id" ref="account_budget.view_crossovered_budget_line_search"/>
            <field name="arch" type="xml">
                <field name="analytic_account_id" position="after">
                    <field name="crossovered_budget_id" />
                    <field name="general_budget_id" />
                    <group expand="0" string="Group By">
                        <filter name="group_by_analytic_account" string="Analytic Account" context="{'group_by':'analytic_account_id'}"/>
                        <filter name="group_by_crossovered_budget" string="Crossovered budget" context="{'group_by':'crossovered_budget_id'}"/>
                        <filter name="group_by_general_budget" string="General budget" context="{'group_by':'general_budget_id'}"/>
                    </group>
                </field>
            </field>
        </record>
</odoo>
